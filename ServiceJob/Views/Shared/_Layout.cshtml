<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <link rel="shortcut icon" href="">
    <link rel="stylesheet" asp-href-include="~/css/Layout.css" asp-append-version="true"/>
    <!-- include alertify-->
    <link rel="stylesheet" asp-href-include="~/lib/alertify/css/**/*.css" asp-append-version="true"/>
    <style>
        a, a:visited {
            color: black;
            outline: none;
        }

        a:hover { text-decoration: none; }

        li:hover { background-color: rgba(141, 255, 255, 0.33); }

        .menuLayout ul li a {
            -ms-flex-align: center;
            -ms-flex-pack: center;
            -webkit-box-align: center;
            -webkit-box-pack: center;
            align-items: center;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            height: 23px;
            justify-content: center;
            text-align: center;
        }
    </style>
</head>
<body>
<nav>
    <div class="menuLayout">
        <ul style="margin: 9px;">
            <li>
                <a asp-area="" asp-page="/Home">Главная</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Views" asp-action="Jvnlp">ЖВНЛП</a>
            </li>
        </ul>
    </div>
</nav>
<script type="text/javascript" src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/lib/alertify/alertify.js" asp-append-version="true"></script>
@RenderBody()
</body>
</html>