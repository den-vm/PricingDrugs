@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ЖВНЛП";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" asp-href-include="~/css/JVNLP/*.css" asp-append-version="true"/>
<div class="menuJvnlp">
    <ul>
        <li name="openFormFile">Загрузить реестр препаратов</li>
        <li name="openFormTableDrugs">Таблица нарк. и псих. препаратов</li>
    </ul>
</div>

<div name="lockbody" style="background: rgba(0, 0, 0, 0.81); bottom: 53px; display: none; left: 0px; position: absolute; right: 0px; top: 66px; width: 100%;">
    <div class="formfileJvnlp" name="divJvnlp">
        <form enctype="multipart/form-data" asp-action="RequestJvnlp" asp-controller="Views" name="jvnlpForm" class="formFileJvnlp">
            <div class="input-file-container">
                <input type="file" class="input-file">
                <label tabindex="0" class="input-file-trigger">Выберите файл</label>
                <input type="submit" class="file-send" value="Отправить">
                <p id="textProgress" style="position: absolute; text-align: center; top: 103%; width: 100%; z-index: 100000;"></p>
            </div>
            <progress id="progressbar" value="0" max="100" style="bottom: 0px; height: 30px; margin-bottom: 5%; position: absolute; width: 89.9%;"></progress>
        </form>
    </div>

    <div class="formDrugsNarcotic" name="divDrugsDownload">
        <div class="divScroll">
            <form asp-action="RequestJvnlp" asp-controller="Views" name="drugNarcoticForm">
                <table id="drugNarcotic" border="1" cellspacing="0" cellpadding="5" class="tableForm">
                    <thead>
                    <tr>
                        <th scope="col">Международное наименование наркотического и психотропного препарата</th>
                        <th scope="col">Функции</th>
                    </tr>
                    </thead>
                    <tbody id="dynamicRowDrugs">
                    <tr>
                        <td style="width: 0">
                            <label>
                                <input type="text" name="nameDrugs" value="" required placeholder="Введите МНН препарата" title="Международное наименование лекарственного препарата">
                            </label>
                        </td>
                        <td style="width: 152px;">
                            <button type="button" class="add">Добавить</button><button type="button" class="del">Удалить</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <input class="saveNDrugs" type="submit" value="Сохранить">
            </form>
        </div>

    </div>
</div>
<script type="text/javascript" src="~/js/JVNLP/FormFile.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/JVNLP/FormNDrugs.js" asp-append-version="true"></script>